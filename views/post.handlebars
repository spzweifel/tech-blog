{{#if logged_in}}
  <div class="text-center">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>{{{comment.description}}}</p>
  </div>
  <div class="comment-container mx-auto max-w-2xl">
    <div class="w-full bg-white rounded-lg border p-2 my-4">

      <h5 class="discussion">Comment:</h5>

      {{#each comments}}
        <div class="comments flex items-center border rounded-md p-2 mb-2">
          <h6 class="font-bold">
            {{this.user.name}}
          </h6>
          <p class="text-gray-600 ml-2">
            {{this.comments}}
          </p>
          <button
            data-id="{{this.id}}"
            class="text-red-500 ml-auto text-sm px-2 py-1 rounded-sm delete-comments"
            id="delcomment"
          >delete</button>
        </div>
      {{/each}}

      <form class="mt-4">
        <div class="w-full px-3 my-2">
          <textarea
            class="textarea" 
            id="comment-textarea"
            name="body"
            placeholder="Add a Comment"
            required
          ></textarea>
        </div>

        <div class="w-full flex justify-end px-3">
          <input
            type="submit"
            id="comment-submit"
            value="Post Comment"
          />
        </div>
      </form>

    </div>
  </div>
{{else}}
  <a href="/login">Login to view the blog posts and comments</a>
{{/if}}


<script src="/js/comment.js"></script>